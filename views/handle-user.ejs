<div class="main-body">
    <div class="page-wrapper">
        <!-- Page-header start -->
        <div class="page-body">
            <div class="row">
                <div class="col-sm-12">
                    <!-- Basic Form Inputs card start -->
                    <div class="card">
                        <div class="card-header">
                            <div class="card-block">
                                <h4 class="sub-title"><%= action %> User</h4>
                                <form action="/admin/user/<%=action%>" method="POST" enctype="multipart/form-data">
                                    <input type="hidden" name="userId"
                                        <%if(locals.useredit){%>
                                            value="<%=useredit.id%>"
                                        <%}%>
                                    >
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Full Name</label>
                                        <div class="col-sm-10">
                                            <input name="fullname" type="text" class="form-control"
                                                <%if(locals.useredit){%>
                                                    value="<%=useredit.fullname%>"
                                                <%}%>
                                            required>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Username</label>
                                        <div class="col-sm-10">
                                            <input name="username" type="text" class="form-control"
                                            <%if(locals.useredit){%>
                                                value="<%=useredit.username%>"
                                            <%}%>
                                            required>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Password</label>
                                        <div class="col-sm-10">
                                            <input name="password" type="password" class="form-control"
                                            <%if(locals.useredit){%>
                                                value="<%=useredit.password%>"
                                            <%}%>
                                            required>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Email</label>
                                        <div class="col-sm-10">
                                            <input name="email" type="email" class="form-control"
                                            <%if(locals.useredit){%>
                                                value="<%=useredit.email%>"
                                            <%}%>
                                            required>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Phone</label>
                                        <div class="col-sm-10">
                                            <input name="phone" type="number" class="form-control"
                                            <%if(locals.useredit){%>
                                                value="<%=useredit.phone%>"
                                            <%}%>
                                            required>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Address</label>
                                        <div class="col-sm-10">
                                            <input name="address" type="text" class="form-control" 
                                            <%if(locals.useredit){%>
                                                value="<%=useredit.address%>"
                                            <%}%>
                                            required>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Permission</label>
                                        <div class="col-sm-10">
                                            <select id="staff-per" name="per" class="form-control">
                                                <%pers.forEach((per)=>{%>
                                                    <option value="<%=per.id%>"
                                                    <%if(locals.useredit){%>
                                                        <%if(useredit.permission._id==per.id){%>
                                                            selected
                                                        <%}%>
                                                    <%}%>    
                                                    ><%=per.perName%></option>
                                                <%})%>
                                            </select>
                                        </div>
                                    </div>
                                    <%if(locals.useredit){%>
                                        <%if(locals.useredit.branch){%>
                                            <div id="staff-branch" class="form-group row">
                                                <label class="col-sm-2 col-form-label">Branch</label>
                                                <div class="col-sm-10">
                                                    <select name="branch" class="form-control">
                                                        <%branches.forEach((branch)=>{%>
                                                            <option value="<%=branch.id%>"
                                                            <%if(locals.useredit){%>
                                                                <%if(useredit.branch._id==branch.id){%>
                                                                    selected
                                                                <%}%>
                                                            <%}%>    
                                                            ><%=branch.name%></option>
                                                        <%})%>
                                                    </select>
                                                </div>
                                            </div>    
                                        <%}else{%>
                                            <div style="display: none;" id="staff-branch" class="form-group row">
                                                <label class="col-sm-2 col-form-label">Branch</label>
                                                <div class="col-sm-10">
                                                    <select name="branch" class="form-control">
                                                        <%branches.forEach((branch)=>{%>
                                                            <option value="<%=branch.id%>"><%=branch.name%></option>
                                                        <%})%>
                                                    </select>
                                                </div>
                                            </div>   
                                        <%}%>
                                    <%}%>
                                    <%if(!locals.useredit){%>
                                        <div style="display: none;" id="staff-branch" class="form-group row">
                                            <label class="col-sm-2 col-form-label">Branch</label>
                                            <div class="col-sm-10">
                                                <select name="branch" class="form-control">
                                                    <%branches.forEach((branch)=>{%>
                                                        <option value="<%=branch.id%>"><%=branch.name%></option>
                                                    <%})%>
                                                </select>
                                            </div>
                                        </div>    
                                    <%}%>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Upload Image</label>
                                        <div class="col-sm-10">
                                            <input id="singlefile" name="avatar" type="file" class="form-control"
                                                <%if(!locals.useredit){%>
                                                    required
                                                <%}%>
                                            >
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label"></label>
                                        <div class="col-sm-10">
                                            <img width="300px" id="img-file" 
                                                <%if(locals.useredit){%>
                                                    src="<%=useredit.avatar%>"
                                                <%}%>
                                            >
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label"></label>
                                        <div class="col-sm-10">
                                            <button class="btn btn-primary">Submit</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>