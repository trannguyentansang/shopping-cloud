<!-- Main-body start-->
<div class="main-body">
    <!-- Page-body start-->
    <div class="page-body">
        <!-- Basic table card start-->
        <div class="card">
            <div class="card-header">
                <h5>User</h5>
            </div>
            <div class="card-block table-border-style">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Full Name</th>
                                <th>Phone</th>
                                <th>Email</th>
                                <th>Joined</th>
                                <th>Image </th>
                                <th colspan="2">
                                    <a href="/admin/user/adding">
                                        <button class="btn btn-block btn-outline-success">Add</button>
                                    </a>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <%users.forEach((user)=>{%>
                                <tr>
                                    <td><%=user.fullname%></td>
                                    <td><%=user.phone%></td>
                                    <td><%=user.email%></td>
                                    <td><%=user.joined%></td>
                                    <td><img width="100px" src="<%=user.avatar%>"></td>
                                    <td>
                                        <a href="/admin/user/editing?id=<%=user.id%>">
                                            <button class="btn btn-block btn-dark">Details & Edit</button>
                                        </a>
                                    </td>
                                    <td>
                                        <%if(user.status){%>
                                            <a href="/admin/user/deactivate?id=<%=user.id%>">
                                                <button class="btn btn-block btn-outline-danger"
                                                onclick="return confirm('When you deactive user, user cannot access to website by this account anymore!')">Deactive</button>
                                            </a>
                                        <%}else{%>
                                            <a href="/admin/user/activate?id=<%=user.id%>">
                                                <button class="btn btn-block btn-success">Active</button>
                                            </a>
                                        <%}%>
                                    </td>
                                </tr>
                            <%})%>
                        </tbody>
                    </table>
                </div>
            </div>
        </div><!-- Basic table card end-->
    </div><!-- Page-body end-->
</div>