<!-- Main-body start-->
<div class="main-body">
    <!-- Page-body start-->
    <div class="page-body">
        <!-- Basic table card start-->
        <div class="card">
            <div class="card-header">
                <h5>Category</h5>
            </div>
            <div class="card-block table-border-style">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Image</th>
                                <th colspan="2">
                                    <a href="/admin/category/adding">
                                        <button class="btn btn-block btn-outline-success">Add</button>
                                    </a>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <% cats.forEach((cat)=>{ %>
                                <tr>
                                    <td><%=cat.catName%></td>
                                    <td><img width="100px" src="<%=cat.catImage%>"></td>
                                    <td>
                                        <a href="/admin/category/editing?id=<%=cat._id%>">
                                            <button class="btn btn-block btn-dark">Edit</button>
                                        </a>
                                    </td>
                                    <td>
                                        <a href="/admin/category/deleting?id=<%=cat._id%>">
                                            <button class="btn btn-block btn-outline-danger" onclick=" return confirm('Are you sure to remove?')">Remove</button>
                                        </a>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div><!-- Basic table card end-->
    </div><!-- Page-body end-->
</div>