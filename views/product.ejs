<!-- Main-body start-->
<div class="main-body">
    <!-- Page-body start-->
    <div class="page-body">
        <!-- Basic table card start-->
        <div class="card">
            <div class="card-header">
                <h5>Product</h5>
            </div>
            <div class="card-block table-border-style">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Date Created</th>
                                <th>Date Modified</th>
                                <th>Image </th>
                                <th colspan="2">
                                    <a href="/admin/product/adding">
                                        <button class="btn btn-block btn-outline-success">Add</button>
                                    </a>
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% products.forEach((pro)=>{ %>
                                <tr>
                                    <td><%=pro.proName%></td>
                                    <td><%=pro.proPrice.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ',')%></td>
                                    <td><%=pro.proQty.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ',')%>
                                        <a href="/admin/product/stockin?id=<%=pro.id%>"><b><i><u>Stock in</u></i></b></a>
                                    </td>
                                    <td><%=moment(pro.proDateCreated).format('DD/MM/YYYY HH:MM')%></td>
                                    <td><%=pro.proDateModified%></td>
                                    <td>
                                        <img width="100px" src="<%=pro.proImage%>">
                                    </td>
                                    <td>
                                        <a href="/admin/product/editing?id=<%=pro.id%>">
                                            <button class="btn btn-block btn-dark">Details & Edit</button>
                                        </a>
                                    </td>
                                    <td>
                                        <a href="/admin/product/deleting?id=<%=pro.id%>">
                                            <button class="btn btn-block btn-outline-danger"
                                            onclick="return confirm('This product will be moved to trash, you can recover it whenever you want!')">Remove</button>
                                        </a>
                                    </td>
                                </tr>
                            <%})%>
                        </tbody>
                    </table>
                </div>
            </div>
        </div><!-- Basic table card end-->
    </div><!-- Page-body end-->
</div>