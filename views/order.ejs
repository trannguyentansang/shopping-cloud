<!-- Main-body start-->
<div class="main-body">
    <!-- Page-body start-->
    <div class="page-body">
        <!-- Basic table card start-->
        <div class="card">
            <div class="card-header">
                <h5>Order</h5>
            </div>
            <div class="card-block table-border-style">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Customer Name </th>
                                <th>Date</th>
                                <th>Total</th>
                                <th></th>
                                <th colspan="2">
                                    <!--<a href="/order/adding">
                                        <button class="btn btn-block btn-outline-success">Add</button>
                                    </a>--> 
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <%orders.forEach((order)=>{%>
                                <tr>
                                    <th scope="row"><%=order.id%></th>
                                    <td><%=order.customer.username%></td>
                                    <td><%=order.date%></td>
                                    <td><%=order.total%></td>
                                    <td> <i><u><a href="/admin/order/details?id=<%=order.id%>">Order details </a></u></i>
                                    </td>
                                    <td>
                                        <a href="/admin/order/accept?id=<%=order.id%>">
                                            <button class="btn btn-block btn-primary">Accept</button>
                                        </a>
                                    </td>
                                    <td>
                                        <a href="/admin/order/cancel?id=<%=order.id%>">
                                            <button class="btn btn-block btn-outline-danger"
                                            onclick="confirm('This product will be moved to trash, you can recover it whenever you want!')">Cancel</button>
                                        </a>
                                    </td>
                                </tr>    
                            <%})%>
                        </tbody>
                    </table>
                </div>
            </div>
        </div><!-- Basic table card end-->
    </div><!-- Page-body end-->
</div>